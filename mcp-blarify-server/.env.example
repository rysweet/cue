# Neo4j Container Management
MANAGE_NEO4J_CONTAINER=true
NEO4J_DATA_DIR=./.blarify/neo4j
ENVIRONMENT=development
DEBUG=false

# Neo4j Connection
# If MANAGE_NEO4J_CONTAINER=true, only password is required
# If MANAGE_NEO4J_CONTAINER=false, NEO4J_URI is also required
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password
NEO4J_DATABASE=neo4j

# Azure OpenAI (optional but recommended for better context organization)
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Graph Traversal Settings
MAX_TRAVERSAL_DEPTH=3
MAX_NODES_PER_TYPE=50

# Context Generation
MAX_CONTEXT_LENGTH=8000
INCLUDE_LLM_SUMMARIES=true

# Cache Settings
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=3600